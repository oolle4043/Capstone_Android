<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#00ff0000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d0d0d0">
        <ImageButton
            android:id="@+id/profile_secession_wd_back_btns"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_width="18.6dp"
            android:layout_height="31.81dp"
            android:scaleType="fitXY"
            android:src="@drawable/setting_back_button"
            android:background="#00ff0000"></ImageButton>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:textSize="25dp"
            android:gravity="center"
            android:text="서비스 해지 및 탈퇴"
            android:textColor="@color/black"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d0d0d0"
        android:layout_marginTop="50dp"
        android:paddingBottom="150dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서비스 해지 및 탈퇴"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="복구 불가능"
            android:textColor="@color/black"></TextView>
    </LinearLayout>
    <CheckBox
        android:id="@+id/profile_secession_wd_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:text="위 내용을 모두 확인하였으며 탈퇴를 진행하겠습니다."></CheckBox>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d0d0d0"
        android:layout_marginTop="290dp">
        <Button
            android:id="@+id/profile_secession_wd_secession_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:background="#00ff0000"
            android:text="탈퇴하기"></Button>
    </LinearLayout>
</LinearLayout>