<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#00ff0000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/setting_back_button"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_width="18.6dp"
            android:layout_height="31.81dp"
            android:scaleType="fitXY"
            android:src="@drawable/setting_back_button"
            android:background="#00ff0000"></ImageButton>
        <TextView
            android:layout_marginTop="13dp"
            android:layout_width="39dp"
            android:layout_height="25dp"
            android:text="설정"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알림 &amp; 푸쉬"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"></TextView>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:columnCount="3"
            android:horizontalSpacing="1dp"
            android:rowCount="5"
            android:verticalSpacing="1dp">

            <TextView
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:text="알림"
                android:textColor="@color/black"></TextView>

            <Button
                android:id="@+id/setting_alarm_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9:00"></Button>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/setting_alarm_switch"
                android:layout_height="23dp"
                android:checked="true"
                android:gravity="center"
                android:thumb="@drawable/shape_switch_thumb"
                app:track="@drawable/selector_switch"></androidx.appcompat.widget.SwitchCompat>

            <TextView
                android:id="@+id/setting_todo"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:text="To do 알림"
                android:textColor="@color/black"></TextView>

            <Button
                android:id="@+id/setting_todo_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9:00"></Button>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/setting_todo_switch"
                android:layout_height="23dp"
                android:checked="true"
                android:gravity="center"
                android:thumb="@drawable/shape_switch_thumb"
                app:track="@drawable/selector_switch"></androidx.appcompat.widget.SwitchCompat>

            <TextView
                android:id="@+id/setting_habit"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:text="Habit 알림"
                android:textColor="@color/black"></TextView>

            <Button
                android:id="@+id/setting_habit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9:00"></Button>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/setting_habit_switch"
                android:layout_height="23dp"
                android:checked="true"
                android:gravity="center"
                android:thumb="@drawable/shape_switch_thumb"
                app:track="@drawable/selector_switch"></androidx.appcompat.widget.SwitchCompat>

            <TextView
                android:id="@+id/setting_calendar"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:text="calendar 알림"
                android:textColor="@color/black"></TextView>

            <Button
                android:id="@+id/setting_calendar_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9:00"></Button>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/setting_calendar_switch"
                android:layout_height="23dp"
                android:checked="true"
                android:gravity="center"
                android:thumb="@drawable/shape_switch_thumb"
                app:track="@drawable/selector_switch"></androidx.appcompat.widget.SwitchCompat>

            <TextView
                android:id="@+id/setting_time"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:text="Time 1시간마다 알림"
                android:textColor="@color/black"></TextView>

            <Button
                android:id="@+id/setting_time_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9:00"></Button>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/setting_time_switch"
                android:layout_height="23dp"
                android:checked="true"
                android:gravity="center"
                android:thumb="@drawable/shape_switch_thumb"
                app:track="@drawable/selector_switch"></androidx.appcompat.widget.SwitchCompat>
        </GridLayout>
    </LinearLayout>

    <TextView
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="캘린더 스타일"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:columnCount="2"
            android:background="@drawable/shape"
            android:horizontalSpacing="1dp"
            android:verticalSpacing="1dp">

            <TextView
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text="색상 모드"></TextView>
            <TextView
                android:id="@+id/setting_color"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:text="알림"></TextView>
        </GridLayout>
    </LinearLayout>

    <TextView
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기타"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"></TextView>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="1"
        android:background="@drawable/shape"
        android:horizontalSpacing="1dp"
        android:verticalSpacing="1dp">
        <TextView
            android:id="@+id/setting_all_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:textColor="#ff0000"
            android:text="전체 일정 삭제"></TextView>
        <TextView
            android:id="@+id/setting_todo_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="#ff0000"
            android:text="To to 일정 삭제"></TextView>
        <TextView
            android:id="@+id/setting_hibit_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="#ff0000"
            android:text="Habit 일정 삭제"></TextView>
        <TextView
            android:id="@+id/setting_calendar_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="#ff0000"
            android:text="calendar 일정 삭제"></TextView>
        <TextView
            android:id="@+id/setting_time_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="20dp"
            android:textColor="#ff0000"
            android:text="Time tracker 일정 삭제"></TextView>
    </GridLayout>
</LinearLayout>